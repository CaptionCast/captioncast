<div class="modal-dialog" id="unique">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </br>
    </div>
    <div class="modal-body">
      <% provide(:title, "Edit contact") %>
      <div>
        <%= form_for :new_line, :url => texts_addLine_path(:id => @text.id) do |f| %>
          <div>
            <%= label_tag 'character_name_label', 'Character', class: 'btn btn-default' %>
            <%= select_tag 'character_name_dropdown', options_from_collection_for_select(@elements, 'id', 'name'), class: 'btn' %>
            <%= label_tag 'visibility_name_label', 'Visibility', class: 'btn btn-default' %>
            <%= f.check_box :visibility  %>
          </div>
          </br>
          <div class='input-group'>
            <span class='input-group-addon'>Operator Note</span>
            <%= f.text_field :operator_note, class: 'form-control', placeholder: "placeholder text" %>
          </div>
          </br>
          <div class='input-group'>
            <%= label_tag 'content_text', 'Text', class: 'input-group-addon' %>
            <%= f.text_area :content_text, class: 'form-control input-xlarge', rows: 4 %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Discard</button>
            <%= f.submit "Create Line", :class => 'btn' %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
