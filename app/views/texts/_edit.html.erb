<div class="modal-dialog" id="unique">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </br>
    </div>
    <div class="modal-body">
      <div class="alert alert-success">
        <%= "#{@previous_line}" %>
      </div>
      <% provide(:title, "Edit contact") %>
      <div>
        <!--form for editing the content/settings of the line-->
        <%= form_for(@text) do |f| %>

          <!-- operator note -->
          <div class='input-group'>
            <span class='input-group-addon'>Operator Note</span>
            <%= f.text_field :operator_note, class: 'form-control', placeholder: "placeholder text" %>
          </div>
          </br>
          <!-- content_text -->
          <div class='input-group'>
            <span class='input-group-addon'>Text</span>
            <%= f.text_area :content_text, class: 'form-control input-xlarge', rows: 4 %>
          </div>
          </br>
          <!-- character -->
          <div class='input-group'>
            <!--
            <span class='input-group-addon'>Character</span>
            <label class='form-control'><%= @text.element.name %></label>
            -->
          </div>

          <!-- element -->
          <div class='input-group'>
            <!--
            <p><%="Element: " + @text.element.element_type%></p>
            -->
          </div>

          <!-- the rest -->
          <div id="character-counter">
            <ul class="list-group">
              <li class="list-group-item">
                Visibility
                <div class="pull-right">
                  <%= f.check_box :visibility %>
                </div>
                </li>
              <li class="list-group-item">
                <span class="badge"><%= @text.sequence %></span>
                Sequence Number
              </li>
              <li class="list-group-item">
                <span id=text_word_count class="badge"><%= @text.content_text.length.to_s%></span>
                Characters
              </li>
            </ul>
          </div>

          <!-- button controls -->
          <div class="btn-group btn-group-justified" role="group">
            <span id="boldIt" class="btn btn-info">Uppercase Text</span>
            <%= link_to 'Add Blank Line After', texts_addBlank_path(:id => @text.id), class: 'btn btn-primary' %>
            <%= link_to 'Delete This Line', texts_removeLine_path(:id => @text.id, :page => params[:page]), class: 'btn btn-danger'%>
          </div>
          <br />
          <div class="alert alert-success">
            <%= "#{@next_line}" %>
          </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Discard</button>
          <%= f.submit "Update" ,:class => 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
